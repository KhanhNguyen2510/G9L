@using G9L.Data.ViewModel.Common
@model PagedResult<G9L.Data.ViewModel.Catalog.ProductType.GetProductTypeViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-1">
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-xl-3 order-xl-2 ">
                <div class=" card-profile">
                    <div class=" card-upgrade">
                        <div class="card-header text-center border-bottom-0">
                            <div class="row">
                                <a href="#">
                                    <div class="col-lg-12">
                                        <div class="position-relative">
                                            <div class="blur-shadow-image">
                                                <img class="w-100 rounded-1 shadow-lg" src="../assets/img/theme/bac_dan_con_lan_NTN-removebg.png">
                                            </div>
                                            <div class="position-absolute container-fluid mt--8">
                                                <p class="font-weight-bold w-100" style="font-size: 30px"> @Html.DisplayFor(modelItem => item.Name)</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
